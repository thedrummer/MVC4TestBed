@model MVC4TestBed.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Movie</legend>

    <div class="display-label">MovieTitle</div>
    <div class="display-field">@Model.MovieTitle</div>

    <div class="display-label">Year</div>
    <div class="display-field">@Model.Year</div>

    <div class="display-label">Genre</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Genre).ToString()</div>

    <div class="display-label">IsArchived</div>
    <div class="display-field">@Model.IsArchived</div>

    <div class="display-label">ArchivedDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.ArchivedDate)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.MovieId }) |
    @Html.ActionLink("Back to List", "Index")
</p>


